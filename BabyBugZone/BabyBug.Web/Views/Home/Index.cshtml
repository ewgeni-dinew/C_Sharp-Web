@model BabyBug.Common.ViewModels.Home.IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/main_styles.css">
    <link rel="stylesheet" type="text/css" href="~/css/responsive.css">
}

<!-- Slider -->
<partial name="_HomeIndexSliderPartial" />

<!-- Banner -->
<partial name="_HomeCategoriesBannerPartial" />

<!-- New Arrivals -->
<partial name="_NewArrivalsHomePartial" model=@Model.LatestProducts />

<!-- Blogs -->
<partial name="_HomeIndexBlogPartial" model=@Model.BlogPages />


@section Scripts {
    <script src="~/plugins/Isotope/isotope.pkgd.min.js" asp-append-version="true"></script>
}