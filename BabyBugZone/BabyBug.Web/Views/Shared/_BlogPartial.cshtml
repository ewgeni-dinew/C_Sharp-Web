@model ICollection<BabyBug.Common.ViewModels.Blog.HomePageBlogModel>

<div class="row blogs_container">
    @foreach (var page in Model)
    {

        {
            var id = page.PageId;
            var imageUrl = page.ImageUrl;
            var title = page.Heading;
            var author = page.Author;
            var date = page.CreatedOn;
            <div class="col-lg-4 blog_item_col">
                <div class="blog_item">
                    <div class="blog_background" style="background-image:url(@imageUrl)"></div>
                    <div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
                        <h4 class="blog_title">@title</h4>
                        <span class="blog_meta">by @author | @date</span>
                        <a class="blog_more" asp-controller="Blog" asp-action="Details" asp-route-id=@id>Read more</a>
                    </div>
                </div>
            </div>
        }
    }

</div>

