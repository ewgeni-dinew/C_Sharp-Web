@model BabyBug.Common.ViewModels.Blog.PageDetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:150px;">

    <h2>@Model.Header</h2>
    <h4>By: @Model.Author</h4>
    <h6>@Model.CreatedOn</h6>
    <p>@Model.Contect</p>

    <div class="row">
        <div class="col">
            <a class="btn btn-primary" asp-area="Administrator" asp-controller="Blog" asp-action="Edit" asp-route-id=@Model.Id>Edit page</a>
        </div>
        <div class="col">
            <form method="post" asp-area="Administrator" asp-controller="Blog" asp-action="Delete" asp-route-id=@Model.Id>
                <input type="submit" value="Delete" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>