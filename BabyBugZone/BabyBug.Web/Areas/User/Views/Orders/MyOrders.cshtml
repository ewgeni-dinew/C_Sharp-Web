@model ICollection<BabyBug.Common.ViewModels.Orders.BaseOrderedProductModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "MyOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <partial name="_SingleStylesPartial" />
}

<div class="container single_product_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a><i class="fa fa-angle-right" aria-hidden="true"></i>Orders</a></li>
                    <li class="active"><a asp-area="User" asp-controller="Orders" asp-action="MyOrders"><i class="fa fa-angle-right" aria-hidden="true"></i>My Orders</a></li>
                </ul>
            </div>

        </div>
    </div>
    @if (Model.Any())
    {
        <partial name="_MyOrdersTablePartial" model=@Model />
        <div class="mt-3">
            <a class="btn btn-primary" asp-area="Shopping" asp-controller="Products" asp-action="Index">Continue Shopping</a>
        </div>
    }
    else
    {
        <div class="row">
            <h3>No products in the <i class="fa fa-shopping-cart" aria-hidden="true"></i> (shopping cart) yet.</h3>
        </div>
        <div class="mt-3">
            <a class="btn btn-primary" asp-area="Shopping" asp-controller="Products" asp-action="Index">Start Shopping</a>
        </div>
    }
</div>


