@model int
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "FinishedOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/css/single_styles.css">
    <link rel="stylesheet" type="text/css" href="~/css/single_responsive.css">
}

<div class="container single_product_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a><i class="fa fa-angle-right" aria-hidden="true"></i>Orders</a></li>
                    <li class="active"><a asp-area="User" asp-controller="Orders" asp-action="FinishedOrder" asp-route-id=@Model><i class="fa fa-angle-right" aria-hidden="true"></i>Finished</a></li>
                </ul>
            </div>

        </div>
    </div>

    <h2 class="pt-5">Thank you for your order!</h2>
    <hr />
    <h3>We will contact you as soon as possible.</h3>
    <h4>Your order number is: @Model. </h4>
    <p>Please do not hesitate to contact us, if any questions arise.</p>
    <hr />
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
