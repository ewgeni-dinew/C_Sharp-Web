@model BabyBug.Common.ViewModels.Categories.DeleteCategoryModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/css/single_styles.css">
    <link rel="stylesheet" type="text/css" href="~/css/single_responsive.css">
}

<div class="container single_product_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="Shopping" asp-controller="Categories" asp-action="Index"><i class="fa fa-angle-right" aria-hidden="true"></i>Categories</a></li>
                    <li class="active"><a asp-area="Administrator" asp-controller="Categories" asp-action="Delete" asp-route-id="@Model.Id"><i class="fa fa-angle-right" aria-hidden="true"></i>Delete</a></li>
                </ul>
            </div>

        </div>
    </div>

    <!-- Delete category -->

    <h3>Are you sure you want to delete this category?</h3>
    <hr />
    <h4 class="bg-danger col-md-9">All products in this category will be automatically deleted!!!</h4>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form method="post" asp-area="Administrator" asp-controller="Categories" asp-action="Delete" asp-route-id=@Model.Id>
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
    </form>
</div>