@model BabyBug.Common.ViewModels.Categories.ModifyCategoryModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h4>DeleteCategoryModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Administrator" asp-controller="Categories" asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for=@Model.CategoryName title="Select category" class="selectpicker">
                    @foreach (var c in Model.CategoryNames)
                    {
                        <option value=@c>@c</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <input type="checkbox" asp-for=@Model.Consent />
                    <label asp-for=@Model.Consent>I want to delete the category!</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

