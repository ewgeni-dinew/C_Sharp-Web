@model BabyBug.Common.ViewModels.Categories.ModifyCategoryModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>EditCategoryModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Administrator" asp-controller="Categories" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for=@Model.CategoryName title="Select category" class="selectpicker">
                    @foreach (var c in Model.CategoryNames)
                    {
                        <option value=@c>@c</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="NewName" class="control-label"></label>
                <input asp-for="NewName" type="text" class="form-control"/>
                <span asp-validation-for="NewName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
