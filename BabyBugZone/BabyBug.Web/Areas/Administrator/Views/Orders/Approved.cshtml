@model ICollection<BabyBug.Common.ViewModels.Orders.OrderViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Approved";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/css/single_styles.css">
    <link rel="stylesheet" type="text/css" href="~/css/single_responsive.css">
}

<div class="container single_product_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a><i class="fa fa-angle-right" aria-hidden="true"></i>Orders</a></li>
                    <li class="active"><a asp-area="Administrator" asp-controller="Orders" asp-action="Approved"><i class="fa fa-angle-right" aria-hidden="true"></i>Approved</a></li>
                </ul>
            </div>

        </div>
    </div>

    <!-- Table -->

    @if (Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Made On</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            @{ var index = 1; }
            @foreach (var order in Model)
            {
                <tr>
                    <th scope="row">@index</th>
                    <td>@order.UserFullName</td>
                    <td>@order.MadeOn</td>
                    <td>
                        Approved
                    </td>
                    <td>
                        <a class="btn btn-success" asp-area="Administrator" asp-controller="Orders" asp-action="DetailsApproved" asp-route-id=@order.OrderId>Details</a>
                    </td>
                </tr>
                index++;
            }

        </table>
    }
</div>


