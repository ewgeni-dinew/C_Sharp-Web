@model ICollection<BabyBug.Common.ViewModels.Orders.OrderViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Full Name</th>
                <th scope="col">Action</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        @{ var index = 1; }
        @foreach (var order in Model)
        {
            <tr>
                <th scope="row">@index</th>
                <td>@order.UserFullName</td>
                <td>
                    <a class="btn btn-primary" asp-area="Administrator" asp-controller="Orders" asp-action="DetailsAwaiting" asp-route-id=@order.OrderId>Details</a>
                </td>
                <td>
                    <a class="btn btn-success" asp-area="Administrator" asp-controller="Orders" asp-action="Approve" asp-route-id=@order.OrderId>Deliver</a>
                </td>
            </tr>
            index++;
        }

    </table>
}


