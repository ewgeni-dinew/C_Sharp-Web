@model BabyBug.Common.ViewModels.TypeManagement.AllTypesModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/css/single_styles.css">
    <link rel="stylesheet" type="text/css" href="~/css/single_responsive.css">
}

<div class="container single_product_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a><i class="fa fa-angle-right" aria-hidden="true"></i>Manage Types</a></li>
                    <li class="active"><a asp-area="Administrator" asp-controller="TypeManagement" asp-action="Index"><i class="fa fa-angle-right" aria-hidden="true"></i>All Types</a></li>
                </ul>
            </div>

        </div>
    </div>

    @if (Model.ProductTypes.Any())
    {
        <h5>Product types:</h5>
        <partial name="_TypeTablePartial" model="@Model.ProductTypes" />
        <a class="btn btn-success" asp-area="Administrator" asp-controller="TypeManagement" asp-action="Edit" asp-route-name="@Model.ProductTypeName">Edit</a>
    }
    @if (Model.PaymentTypes.Any())
    {
        <h5 class="pt-5">Payment types:</h5>
        <partial name="_TypeTablePartial" model="@Model.PaymentTypes" />
        <a class="btn btn-success" asp-area="Administrator" asp-controller="TypeManagement" asp-action="Edit" asp-route-name="@Model.PaymentTypeName">Edit</a>
    }
    @if (Model.DeliveryTypes.Any())
    {
        <h5 class="pt-5">Delivery types:</h5>
        <partial name="_TypeTablePartial" model="@Model.DeliveryTypes" />
        <a class="btn btn-success" asp-area="Administrator" asp-controller="TypeManagement" asp-action="Edit" asp-route-name="@Model.DeliveryTypeName">Edit</a>
    }
    <hr />
    <div class="row">
        <a class="btn btn-primary" asp-area="Administrator" asp-controller="TypeManagement" asp-action="Create">Create</a>
    </div>
</div>


