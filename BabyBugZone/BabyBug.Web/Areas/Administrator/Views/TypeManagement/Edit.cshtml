@model BabyBug.Common.ViewModels.TypeManagement.EditTypeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container single_product_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a><i class="fa fa-angle-right" aria-hidden="true"></i>Manage Types</a></li>
                    <li class="active"><a asp-area="Administrator" asp-controller="TypeManagement" asp-action="Edit" asp-route-name="@Model.ClassName"><i class="fa fa-angle-right" aria-hidden="true"></i>Edit</a></li>
                </ul>
            </div>

        </div>
    </div>

    <!-- Edit Type -->
    <h4>Edit type</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-area="Administrator" asp-controller="TypeManagement" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for=@Model.ClassName type="hidden" value=@Model.ClassName/>
                <div class="form-group">
                     <select asp-for=@Model.OldName class="form-control">
                        <option>--Select type--</option>
                        @foreach (var c in Model.Types)
                        {
                            <option value=@c>@c</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for=@Model.NewName class="control-label"></label>
                    <input asp-for=@Model.NewName class="form-control" placeholder=@Model.OldName />
                    <span asp-validation-for=@Model.NewName class="text-danger"></span>
                </div>                
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/select-size.js" asp-append-version="true"></script>
}
