@model ICollection<BabyBug.Common.ViewModels.TypeManagement.BaseTypeModel>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Type Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    @{ var index = 1; }
    @foreach (var x in Model)
    {
        <tr>
            <th scope="row">@index</th>
            <td>@x.Type</td>
            <td>
                <a class="btn btn-success" style="color:white" asp-area="Administrator" asp-controller="TypeManagement" asp-action="Edit" asp-route-id=@x.Id asp-route-name="@x.Type">Edit</a>
            </td>
        </tr>
        index++;
    }

</table>
<hr />