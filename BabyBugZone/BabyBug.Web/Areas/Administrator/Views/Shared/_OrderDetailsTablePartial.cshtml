@model BabyBug.Common.ViewModels.Orders.AllOrderedProductsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<table id="table_orderInfo" class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product name</th>
            <th scope="col">Type</th>
            <th scope="col">Size</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    @{ var index = 1; }
    @foreach (var product in Model.OrderedProducts)
    {
        <tr>
            <th scope="row">@index</th>
            <td><a asp-area="Shopping" asp-controller="Products" asp-action="Details" asp-route-id=@product.ProductId>@product.Name</a></td>
            <td>@product.ProductType</td>
            <td>@product.Size</td>
            <td>@product.Quantity</td>
            <td>@product.Price</td>
        </tr>
        index++;
    }

</table>