@model ICollection<BabyBug.Common.ViewModels.GarmentSize.BaseGarmentSizeModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Garment Sizes</h2>

<ul>
    @foreach (var size in Model)
    {
        <li>
            <div class="row">
                <div class="col">
                    <h5 class="text-center">@size.Name</h5>
                </div>
                <div class="col">
                    <form method="post" asp-area="Administrator" asp-controller="GarmentSize" asp-action="Delete" asp-route-id=@size.Id>
                        <div class="form-group">
                            <input type="submit" value="Delete" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
                
            </div>

        </li>
    }
</ul>

<div>
    <a class="btn btn-primary" asp-area="Administrator" asp-controller="GarmentSize" asp-action="Create">Create</a>
</div>

