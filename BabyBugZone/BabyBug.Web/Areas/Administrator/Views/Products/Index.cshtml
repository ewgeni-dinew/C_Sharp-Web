@model ICollection<BabyBug.Common.ViewModels.Products.BaseProductModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <partial name="_SingleStylesPartial" />
    <link rel="stylesheet" type="text/css" href="~/css/datatables.css">
}

<div class="container single_product_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a><i class="fa fa-angle-right" aria-hidden="true"></i>Products</a></li>
                    <li class="active"><a asp-area="Administrator" asp-controller="Products" asp-action="Index"><i class="fa fa-angle-right" aria-hidden="true"></i>Manage</a></li>
                </ul>
            </div>

        </div>
    </div>
    <partial name="_OutOfStockProductsTablePartial" model=@Model />

    <hr />
    <a class="btn btn-primary" asp-area="Administrator" asp-controller="Products" asp-action="Create">Create product</a>
</div>

@section Scripts{
    <script src="~/js/datatables.js" asp-append-version="true"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_products').DataTable();
        });
    </script>
}