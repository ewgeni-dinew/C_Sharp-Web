@model BabyBug.Common.ViewModels.Categories.AllCategoriesModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <partial name="_MainStylesPartial" />
    <partial name="_SingleStylesPartial" />
}

<div class="container single_product_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="active"><a asp-area="Shopping" asp-controller="Categories" asp-action="Index"><i class="fa fa-angle-right" aria-hidden="true"></i>Categories</a></li>
                </ul>
            </div>

        </div>
    </div>

    <!-- Banner -->
    <div class="banner mt-0">
        <div class="container">
            <partial name="_CategoriesIndexPartial" model=@Model />
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <hr />
        <div class="row">
            <div class="col">
                <a class="btn btn-primary" asp-area="Administrator" asp-controller="Categories" asp-action="Create">Create</a>
            </div>
        </div>
    }
</div>