                    <div class="sidebar_section">
                        <div class="sidebar_title">
                            <h5>Gender</h5>
                        </div>
                        <input type="radio" asp-for=@Model.FilterModel.Gender value="M" />
                        <input type="radio" asp-for=@Model.FilterModel.Gender value="F" />
