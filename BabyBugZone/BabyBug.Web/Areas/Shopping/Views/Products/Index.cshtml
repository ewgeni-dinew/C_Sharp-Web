<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li class="active"><a href="index.html"><i class="fa fa-angle-right" aria-hidden="true"></i>Men's</a></li>
                </ul>
            </div>

            <!-- Sidebar -->

            <div class="sidebar">

                <!-- Product Types -->
                <div class="sidebar_section">
                    <div class="sidebar_title">
                        <h5>Products</h5>
                    </div>
                    <ul class="sidebar_categories">
                        @foreach (var type in Model.ProductTypes)
                        {
                            if (type.Equals(Model.ProductType))
                            {
                                <li class="active">
                                    <a asp-area="Shopping" asp-controller="Products" asp-action="FilterByType" asp-route-type=@type><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@type</a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a asp-area="Shopping" asp-controller="Products" asp-action="FilterByType" asp-route-type=@type>@type</a>
                                </li>
                            }
                        }
                    </ul>
                </div>

                <!-- Product Categories -->
                <div class="sidebar_section">
                    <div class="sidebar_title">
                        <h5>Categories</h5>
                    </div>
                    <ul class="sidebar_categories">
                        @foreach (var category in Model.CategoryNames)
                        {
                            if (category.Equals(Model.CategoryName))
                            {
                                <li class="active">
                                    <a asp-area="Shopping" asp-controller="Products" asp-action="FilterByCategory" asp-route-name=@category><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@category</a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a asp-area="Shopping" asp-controller="Products" asp-action="FilterByCategory" asp-route-name=@category>@category</a>
                                </li>
                            }
                        }
                    </ul>
                    <div class="show_more">
                        <span><span>+</span>Show More</span>
                    </div>
                </div>

                <!-- Price Range Filtering -->

                <form method="get" asp-area="Shopping" asp-controller="Products" asp-action="FilterByCriteria">
                    <input type="hidden" asp-for=@Model.FilterModel.ProductType />
                    <input type="hidden" asp-for=@Model.FilterModel.CategoryName />
