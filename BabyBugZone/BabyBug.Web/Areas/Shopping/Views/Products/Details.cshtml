@model BabyBug.Common.ViewModels.Garments.ProductDetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/plugins/themify-icons/themify-icons.css">
    <link rel="stylesheet" type="text/css" href="~/plugins/jquery-ui-1.12.1.custom/jquery-ui.css">
    <partial name="_SingleStylesPartial" />
}
<div class="container single_product_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="Shopping" asp-controller="Categories" asp-action="Index"><i class="fa fa-angle-right" aria-hidden="true"></i>Categories</a></li>
                    <li class="active"><a asp-area="Shopping" asp-controller="Categories" asp-action="Index"><i class="fa fa-angle-right" aria-hidden="true"></i>@Model.CategoryName</a></li>
                </ul>
            </div>

        </div>
    </div>

    <div class="row">
        <partial name="_ProductDetailsImagesPartial" model=@Model />
        <div class="col-lg-5">
            <div class="product_details">
                <partial name="_ProductDetailsPartial" model=@Model />
                <partial name="_OrderProductFormPartial" model=@Model />
            </div>
        </div>
    </div>

</div>

<!-- Tabs -->

<partial name="_ProductDetailsTabPartial" model=@Model />

@section Scripts {
    <script src="~/plugins/jquery-ui-1.12.1.custom/jquery-ui.js" asp-append-version="true"></script>

    <script src="~/js/single_custom.js" asp-append-version="true"></script>

    <script src="~/js/inputQuantity.js" asp-append-version="true"></script>

    <script src="~/js/select-size.js" asp-append-version="true"></script>
}

