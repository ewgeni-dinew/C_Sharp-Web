@{
    ViewData["Title"] = "Home Page";
}

<div class="col-lg-offset-1 col-lg-10 jumbotron mt-3 event-bg-color">
    @if (User.Identity.Name != null)
    {
        if (User.IsInRole("Admin"))
        {
            <h1 class="text-center">Greetings, Administrator-@User.Identity.Name!</h1>
            <hr class="hr-2 hr-grey"/>
            <p class="text-center text-grey">Enjoy your work.</p>
        }
        else
        {
            <h1 class="text-center">Welcome, @User.Identity.Name!</h1>
            <hr class="hr-2 hr-grey"/>
            <p class="text-center text-grey">Eventures wishes you a fun experience.</p>
        }
    }
    else
    {
        <h1>Eventures-the best ticket service in the world.</h1>
        <hr class="hr-2 hr-black" />
        <h3><a asp-controller="Accounts" asp-action="Login" class="nav-link-dark">Login</a> to start "eventing".</h3>
        <h3><a asp-controller="Accounts" asp-action="Register" class="nav-link-dark">Register</a> if you don't.</h3>

    }
</div>


