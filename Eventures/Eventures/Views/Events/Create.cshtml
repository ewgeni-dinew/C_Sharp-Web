@model Eventures.ViewModels.CreateEventBindingModel
@{
    ViewData["Title"] = "Create";
}
<h1 class="text-center">Create Event</h1>
<hr class="hr-2 hr-turquoise half-width" />
<form class="mx-auto half-width" method="post" asp-controller="Events" asp-action="Create">
    <div class="row">
        <div class="col-6 form-group">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Name...">
        </div>
        <div class="col-6 form-group">
            <label asp-for="Place">Email</label>
            <input asp-for="Place" type="text" class="form-control" placeholder="Place...">
        </div>
    </div>
    <hr class="hr-2 hr-turquoise" />
    <div class="row">
        <div class="col-6 form-group">
            <label asp-for="Start">Start</label>
            <input asp-for="Start" type="date" class="form-control">
        </div>
        <div class="col-6 form-group">
            <label asp-for="End">End</label>
            <input asp-for="End" type="date" class="form-control">
        </div>
    </div>
    <hr class="hr-2 hr-turquoise" />
    <div class="row">
        <div class="col-6 form-group">
            <label asp-for="TotalTickets">Total Tickets</label>
            <input asp-for="TotalTickets" type="number" class="form-control" placeholder="1000">
        </div>
        <div class="col-6 form-group">
            <label asp-for="PricePerTicket">Price Per Ticket</label>
            <input asp-for="PricePerTicket" type="number" class="form-control" placeholder="150">
        </div>
    </div>
    <hr class="bg-secondary"/>
    
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn event-bg-color">Create Event</button>
    </div>
</form>


