@model  Eventures.ViewModels.LoginBindingModel
@{
    ViewData["Title"] = "Login";
}
<div class="col-lg-offset-4 col-lg-4">
    <h1 class="text-center">Login</h1>
    <hr class="hr-2 hr-turquoise" />
    <form class="mx-auto" method="post" asp-controller="Accounts" asp-action="Login">
        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" type="text" class="form-control" placeholder="Username...">
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password...">
        </div>
        <hr class="hr-2 hr-turquoise" />
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="defaultCheck2" disabled>
                <label class="form-check-label" for="defaultCheck2">
                    Remember me?
                </label>
            </div>
        </div>
        <hr class="hr-2 hr-turquoise" />
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn event-bg-color">Login</button>
        </div>
    </form>
    <div class="mt-3 mb-3">
        <div class="text-center"><a href="/">Forgot your password?</a></div>
        <div class="text-center"><a asp-controller="Accounts" asp-action="Register">Register as new user</a></div>
    </div>
    
</div>
